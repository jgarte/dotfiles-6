fresh freshshell/fresh bin/fresh --bin

fresh config/clipboard.sh
fresh config/codecdpath.sh
fresh config/completion.sh
fresh config/direnv.sh
fresh config/docker-compose.sh
fresh config/editor.sh
fresh config/fuzzy-cd.sh
fresh config/git.sh
fresh config/history.sh
fresh config/ls.sh
fresh config/nix-shell.sh
fresh config/nix.sh
fresh config/opts.sh
fresh config/path.sh
fresh config/prompt.sh
fresh config/reload.sh
fresh config/rust.sh
fresh config/title.sh

fresh config/termonad/termonad.hs --file=~/.config/termonad/termonad.hs

fresh junegunn/vim-plug plug.vim --file=~/.vim/autoload/plug.vim
fresh vim/ftplugin/haskell.vim --file=~/.vim/ftplugin/haskell.vim

fresh git/git contrib/completion/git-completion.bash --file=~/.local/share/git-completion.bash

fresh chriskempson/base16-shell . --file=~/.config/base16-shell/
fresh config/base-16.sh

fresh nicodebo/base16-fzf bash/base16-tomorrow.config

fresh tmux-plugins/tpm . --file=~/.tmux/plugins/tpm/

fresh nix/config.nix --file=~/.config/nixpkgs/config.nix

fresh bashrc --file
fresh gitignore --file
fresh gitconfig --file
fresh vimrc --file
fresh tmux.conf --file

fresh_after_build () {
  chmod +x ~/.tmux/plugins/tpm/bindings/*
  chmod +x ~/.tmux/plugins/tpm/bin/*
}
